                                        <TextBlock Text="{Binding Register1.Measure}" Width="34" Margin="2,2,0,0" TextAlignment="Left"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

