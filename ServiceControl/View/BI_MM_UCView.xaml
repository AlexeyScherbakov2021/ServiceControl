                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" TextWrapping="Wrap" Width="140" VerticalAlignment="Center"/>
                                            <Border x:Name="border" Background="#c0FFc0" Margin="6,3,10,1" CornerRadius="8" BorderBrush="Black" 
                                        BorderThickness="1">
                                                <TextBlock Text="{Binding ValueString}" Width="120" VerticalAlignment="Center"
                                                ToolTip="{Binding ToolTip}" Padding="2" TextAlignment="Center"/>
                                            </Border>
                                        </StackPanel>
                                        <DataTemplate.Triggers>
                                            <DataTrigger Binding="{Binding IsAlarm}" Value="true">
                                                <Setter Property="Background" Value="#FFd0d0" TargetName="border"/>
                                            </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </GroupBox>

