                    <StackPanel Margin="8,0" Orientation="Vertical" >
                        <ItemsControl ItemsSource="{Binding ListHolding}" >
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" TextWrapping="Wrap" Width="220" />
                                        <TextBox Text="{Binding Value,StringFormat=0.##, TargetNullValue=--}" Width="64" Margin="4,1" ToolTip="{Binding ToolTip}" />
                                        <TextBlock Text="{Binding Measure}" Width="68" Margin="2,2,0,0" TextAlignment="Left"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!--Запись реального времени-->
                        <ItemsControl ItemsSource="{Binding ListRealTime}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" TextWrapping="Wrap" Width="190" TextAlignment="Right" 
                               VerticalAlignment="Top"/>
                                        <TextBox Text="{Binding RealTimeValue, StringFormat=\{0:G\}, TargetNullValue=--}" 
                                 Width="158" ToolTip="{Binding ToolTip}" Margin="4,1" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding device.WakeUp.Name}" TextWrapping="Wrap" Width="220" />
                            <TextBox Text="{Binding device.WakeUp.Value,StringFormat=0.##, TargetNullValue=--}" 
                                     Width="64" Margin="4,1" ToolTip="{Binding device.WakeUp.ToolTip}" IsReadOnly="False"/>

                            <Button Width="30" Margin="1" VerticalAlignment="Top" ToolTip="Записать для отправки" Style="{StaticResource ButtonStyle1}"
                                            CommandParameter="{Binding Register2}" Padding="3"
                                            Command="{Binding WriteValueCommand}">
                                <Image Source="/Resources/Logout.png" Width="16" Height="16" Style="{StaticResource OutImageStyle}"/>
                            </Button>
                            <TextBlock Text="{Binding device.WakeUp.Measure}" Width="68" Margin="2,2,0,0" TextAlignment="Left"/>

                        </StackPanel>

                    </StackPanel>
                    
                    <StackPanel Margin="0,0" Orientation="Vertical">
                        <ItemsControl ItemsSource="{Binding ListHoldingTwo}" >
