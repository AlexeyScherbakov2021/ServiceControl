<Window x:Class="ServiceControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServiceControl"
        xmlns:vm="clr-namespace:ServiceControl.ViewModel"
        mc:Ignorable="d"
        Background="WhiteSmoke"
        Title="Service Control" Height="450" Width="800" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <TextBlock Text="{Binding device.ListInput[7].Name}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="130" Margin="10,61,0,0"/>
        <TextBlock Text="{Binding device.ListInput[8].Name, StringFormat=0.0}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="130" Margin="10,88,0,0"/>
        <TextBlock Text="{Binding device.ListInput[9].Name}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="130" Margin="10,119,0,0"/>
        <TextBox Text="{Binding device.ListInput[7].Value, StringFormat=0.0}" IsReadOnly="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="172,60,0,0"/>
        <TextBox Text="{Binding device.ListHolding[0].Value, Mode=TwoWay, StringFormat=0.0}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="280,60,0,0"/>
        <TextBox Text="{Binding device.ListInput[8].Value, StringFormat=0.0}" IsReadOnly="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="172,88,0,0"/>
        <TextBox Text="{Binding device.ListInput[9].Value, StringFormat=0.00}" IsReadOnly="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="172,117,0,0"/>
        <Button Content=">>" Command="{Binding OkCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="364,58,0,0"/>
        <RadioButton IsChecked="{Binding IsCurrentStab}" Content="Ток" HorizontalAlignment="Left" Margin="470,68,0,0" VerticalAlignment="Top"/>
        <RadioButton IsChecked="{Binding IsSummPotStab}" Content="Потенциал" HorizontalAlignment="Left" Margin="470,89,0,0" VerticalAlignment="Top"/>
        <RadioButton IsChecked="{Binding IsNaprStab}" Content="Напряжение" HorizontalAlignment="Left" Margin="470,109,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
