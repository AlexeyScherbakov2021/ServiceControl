                                            Padding="3" Command="{Binding DataContext.WriteTimeCommand, ElementName=mainControl}">
                            <Image Source="/Resources/Logout.png" Width="16" Height="16" Style="{StaticResource OutImageStyle}"/>
                        </Button>
                    </StackPanel>

                    
                    

                </StackPanel>
            </GroupBox>
        </Border>

