                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                        </Border>

                        <Button Content="{DynamicResource OnOff}" Margin="0,20" Height="30" 
                                Command="{Binding OnOffCommand}"
                                Style="{StaticResource ButtonStyle1}"/>

                        --><!--<CheckBox Content="Включено" IsChecked="{Binding device.OnOffMS.ValueBool}" Margin="20,0,40,0"/>

                    </StackPanel>-->


                </StackPanel>
            </GroupBox>
        </Border>

        <!--показания датчиков-->
        <Border Margin="4,0" Grid.Column="2" Grid.Row="0"  Grid.RowSpan="5" Visibility="Visible">
            <GroupBox >
                <GroupBox.Header>
                    <TextBlock Text="{DynamicResource ValueSensor}" FontSize="16" FontWeight="Bold"/>
                </GroupBox.Header>
                <StackPanel>

                    <ItemsControl ItemsSource="{Binding ListKIP}" Margin="6,10" Height="390" >
                        
                        <ItemsControl.Template>
                            <ControlTemplate>
                                <Border Background="Gainsboro" BorderBrush="Gray" BorderThickness="0.5" CornerRadius="3">
                                    <Border Margin="6" BorderBrush="Gray" BorderThickness="0.5">
                                        <ScrollViewer x:Name="ScrollViewer" Padding="{TemplateBinding Padding}" >
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Border>
                            </ControlTemplate>
                        </ItemsControl.Template>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Height="22" Background="#e8e8e8">
                                    <TextBlock Text="{Binding Name}" Width="70"/>
                                    <TextBlock Text="{Binding Number}" Width="20"/>
                                    <TextBlock Text="{Binding Register1.Number}" Margin="2,0"/>

                                     <TextBox Text="{Binding Value, StringFormat=0.00}" Margin="4,0"
                                               ToolTip="{Binding Register1.ToolTip}" Width="60"/>
                                    <TextBlock Text="{Binding Measure}" Margin="0,0,8,0" />

                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </GroupBox>
        </Border>

    </Grid>
</UserControl>
