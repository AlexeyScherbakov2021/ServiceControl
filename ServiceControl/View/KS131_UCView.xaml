                    <TextBlock Text="{DynamicResource Year}" TextAlignment="Right" Grid.Row="0" Grid.Column="2"/>
                    <TextBox Text="{Binding device.InfoReg.Year}" Margin="8,0,0,0"  Grid.Row="0"  Grid.Column="3" />

                    <TextBlock Text="№" TextAlignment="Right" Grid.Row="1" Grid.Column="2"/>
                    <TextBox Text="{Binding device.InfoReg.NumberDev}" Margin="8,0,0,0"  Grid.Row="1" Grid.Column="3" />
                </Grid>

            </GroupBox>
        </Border>

