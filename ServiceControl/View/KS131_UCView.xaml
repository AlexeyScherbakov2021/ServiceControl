        <!--Карточка устройства-->
        <Border  Margin="4,0" Grid.Row="3" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="1" >
            <GroupBox >
                <GroupBox.Header>
                    <TextBlock Text="{DynamicResource CardDev}" FontSize="16" FontWeight="Bold"/>
                </GroupBox.Header>
                <Grid Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="22"/>
                        <RowDefinition Height="22"/>
