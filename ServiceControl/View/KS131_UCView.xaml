                    </Grid.RowDefinitions>

                    <TextBlock Text="{DynamicResource VerPlate}" />
                    <TextBox Text="{Binding device.InfoReg.VersionDev}" Margin="8,0,0,0" Grid.Column="1"/>

                    <TextBlock Text="{DynamicResource VerPO}" Grid.Column="0" Grid.Row="1"/>
